<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@drawable/green"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="386dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="1dp">

                <ViewFlipper
                    android:id="@+id/viewFlipper"
                    android:layout_width="471dp"
                    android:layout_height="160dp">

                    <ImageView
                        android:id="@+id/ImageView1"
                        android:layout_width="408dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/ad" />

                    <ImageView
                        android:id="@+id/ImageView2"
                        android:layout_width="482dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/imagesf" />

                    <ImageView
                        android:id="@+id/ImageView3"
                        android:layout_width="482dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/app" />

                </ViewFlipper>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="111dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="12dp"
                android:layout_marginTop="12dp"
                android:layout_height="120dp"
                android:layout_weight="1"

                android:orientation="vertical"
                android:layout_marginLeft="32dp"
                android:padding="0dp">

                <Button
                    android:id="@+id/btndoautma"
                    android:clickable="true"
                    android:layout_width="61dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:foreground="@drawable/prayingn"
                    android:background="@drawable/login" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="DOA UTAMA"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="33dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginLeft="32dp"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/btndoalain"
                    android:layout_width="58dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/doalain" />

                <TextView
                    android:layout_width="141dp"
                    android:layout_height="46dp"
                    android:gravity="center_horizontal"
                    android:padding="0dp"
                    android:text="DOA LAIN"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="120dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/btnrosario"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rosa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="ROSARIO"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="120dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"

                android:layout_marginRight="33dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/btnnovena"
                    android:layout_width="74dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/novena" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_horizontal"
                    android:text="NOVENA"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="49dp"
                android:layout_height="149dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/btnbackabout"
                    android:layout_width="66dp"
                    android:layout_height="71dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/user" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="ABOUT"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="47dp"
                android:layout_height="145dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="33dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/btnprofile"
                    android:layout_width="66dp"
                    android:layout_height="71dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/logo" />


                <TextView
                    android:layout_width="115dp"
                    android:layout_height="53dp"
                    android:gravity="center_horizontal"
                    android:text="profile saya"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</ScrollView>